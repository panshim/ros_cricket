<launch>

	<include file="$(find gazebo_ros)/launch/empty_world.launch"/>

	<node pkg="ball_throwing"
		  	  type="ball_node"
		  	  name="throw_the_ball"
                          args="1 1 0"
                          output="screen">
	</node>

        <node pkg="ball_throwing"
		  	  type="pub_real_pos_node"
		  	  name="pub_ball_real_pos"
                          output="screen">
	</node>

        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ball_throwing)/rviz/ball.rviz"/>

</launch>

